.writter
    height 100%
    width 100%
    // 让单个子元素实现水平，垂直居中
    display flex
    justify-content center
    align-items center
    .panel
        width 70%
        min-width 200px
        height 400px
        background-color white
        text-align center
        color black
        border-radius 3px
        .top
            display flex
            height 60px
            // overflow hidden
            .left
                flex 1
                width 100%
                box-sizing border-box
                // padding 20px 20px 0 20px
                // align-items flex-start
                .input-wrapper
                    padding 20px 0 0 20px
                    input
                        box-sizing border-box
                        width 100%
                        height 40px
                        padding 0 0 0 20px
                        border 1px solid #ddd
                        border-radius 5px
                        box-shadow 1px 1px 1px #ddd
                        color black
            .middle
                flex 1
                align-items flex-start
                box-sizing border-box
                .selected
                    box-sizing border-box
                    padding 20px 0 0 20px
                    .text
                        border 1px solid #ddd
                        border-radius 5px
                        box-shadow 1px 1px 1px #ddd 
                        height 38px
                        line-height 38px
                    .active
                        background-color #ddd
                .item
                    box-sizing border-box
                    padding 0 0 0 20px
                    height 40px
                    .text
                        height 38px
                        line-height 38px
                        border 1px solid #ddd
            .right 
                flex 1
                box-sizing border-box
                .icons
                    display flex
                    box-sizing border-box
                    padding 20px 20px 0 20px
                    height 60px
                    line-height 40px
                    .left 
                        flex 1
                        text-align center
                    .right 
                        flex 1
                        text-align center


