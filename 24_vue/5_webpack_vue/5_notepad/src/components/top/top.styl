.top
    display flex
    width 100%
    height 60px
    font-weight bold
    color white
    font-size 18px
    line-height 60px
    background-color black
    .left
        flex 1
        padding-left 20px
    .title
        flex 2
        text-align center
    .right 
        flex 1
        .fa
            float right
            padding-right 20px
    .fa
        line-height 60px
    .container
        position absolute
        left 0
        top 60px
        width 100%
        // 动画定义
        &.fade-enter-active  
            animation: fade-in .5s
        &.fade-leave-active
            animation: fade-out .5s
        @keyframes fade-in {
            0% {
                opacity: 0
            }
            100% {
                opacity: 1
            }
        }
        @keyframes fade-out {
            0% {
                opacity: 1
            }
            100% {
                opacity 0
            }
        }
.mask
    background-color rgba(7,17,27,.1)
    width 100%
    height 100%
    position fixed 
    left 0
    top 0
    // 动画定义
    &.fade-enter-active  
        animation: fade-in .5s
    &.fade-leave-active
        animation: fade-out .5s
    @keyframes fade-in {
        0% {
            opacity: 0
        }
        100% {
            opacity: 1
        }
    }
    @keyframes fade-out {
        0% {
            opacity: 1
        }
        100% {
            opacity 0
        }
    }


        
