.masker
    background-color rgba(7,17,27,.1)
    width 100%
    height 100%
    position fixed 
    left 0
    top 0
    z-index 1000
    // 动画定义
    &.mask-enter-active  
        animation: fade-in .5s
    &.mask-leave-active
        animation: fade-out .5s
    @keyframes fade-in {
        0% {
            opacity: 0
        }
        100% {
            opacity: 1
        }
    }
    @keyframes fade-out {
        0% {
            opacity: 1
        }
        100% {
            opacity 0
        }
    }