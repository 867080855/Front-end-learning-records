.card
    width 100%;
    height 300px
    overflow hidden
    background-color white
    border-radius 0 10px 10px 10px
    background-color white
    vertical-align top
    .top 
        display flex
        border-bottom 1px solid #ddd
        border-left 4px solid #096CA1
        .title
            flex 2
            height 39px
            font-size 15px
            line-height 40px
            font-weight bold
            padding-left 10px
        .right
            display flex
            flex 1
            .fa
                text-align center
                line-height 39px
            .edit
                flex 1
            .close
                flex 1
    .content
        padding 12px
        height 260px
        // line-height 30px
        // font-size 18px
        box-sizing border-box
        overflow hidden
    .mask
        position fixed 
        left 0
        top 0
        width 100%
        height 100%