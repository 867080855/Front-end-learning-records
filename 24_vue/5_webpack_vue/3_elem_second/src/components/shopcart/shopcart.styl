@import "../../common/stylus/mixin.styl"
.shopcart
    position fixed 
    bottom 0
    left 0
    height 46px
    width 100%
    background-color black
    display flex
    z-index 999
    .cart-left
        position relative
        height 100%
        flex 1
        .logo-wrapper
            display inline-block
            position absolute 
            left 20px
            bottom 10px
            width 50px
            height 50px
            border-radius 25px
            background-color black
            .logo
                position absolute 
                left 7px
                top 7px
                background-color rgb(0,160,220)
                width 36px 
                height 36px
                border-radius 18px
                z-index 10
                .iconfont
                    color white
                    line-height 36px
                    text-align center
                    position absolute 
                    font-size 20px
                    left 7px
                    top -1px
            .num
                position absolute
                display inline-block
                color white
                background-color red
                width 28px
                height 18px
                border-radius 9px
                left 30px
                z-index 20
                font-size 10px
                text-align center
                line-height 18px
                font-weight bold
                // font-weight bold
                // font-size 20px
                // line-height 46px
        .price
            display inline-block
            vertical-align top
            font-size 20px
            font-weight bold
            margin-top 12px
            line-height 23px
            margin-bottom 12px
            color rgb(255, 255, 255)
            box-sizing border-box
            padding-right 12px
            margin-left 70px
            border-right 1px solid rgba(127,117,127,.9)
    .cart-middle
        flex 1
        margin-top 12px
        font-size 10px
        color rgba(255, 255, 255, 0.4)
        margin-left 12px
        line-height 23px
        margin-bottom 12px
    .cart-right 
        flex 1
        color rgba(255, 255, 255, 0.4)
        font-weight bold
        font-size 12px
        line-height 46px
        text-align center
        background #2b333b
    .enough 
        background-color #00b43c
        color white
    .not-enough
        background-color #2b333b
    .shopcart-list
        position absolute 
        left 0
        bottom 46px
        width 100%
        max-height 287px
        overflow hidden
        .title
            height 40px
            font-size 14px
            line-height 40px
            color rgb(7,17,27)
            padding 0 18px
            background-color #f3f5f7
            border-bottom 1px solid rgba(7,17,27,0.1)
            .empty
                display inline-block
                font-size 12px
                color rgb(0,160,220)
                line-height 40px
                float right
        .list-content
            // 如果不加 max-height， 底部会盖住购物车
            // 如果不加 hidden， 上部会盖住title
            max-height 247px
            overflow hidden
            background-color white
            .item
                background-color white
                height 48px
                margin 0 18px
                font-size 14px
                line-height 48px
                color rgb(7,17,27)
                border-1px(rgba(7, 17, 27, 0.1))
                .name
                    display inline-block
                    font-weight bold
                .price
                    position absolute
                    right 80px
                    top 0
                    display inline-block
                    padding-left 18px
                    padding-right 12px
                    color rgb(240,20,20)
                    font-weight bold
                .cartctrl
                    float right
                    vertical-align bottom
.mask
    position fixed 
    top 0
    left 0
    z-index 40
    width 100%
    height 100%
    background-color rgba(7,17,27,0.6)
    // 定义盒子的显示动画
    &.fade-enter-active, &.fade-leave-active {
        opacity 1
        transition all 0.5s
        background rgba(7, 17, 27, 0.6)
    }
    &.fade-enter, &.fade-leave-active {
        opacity 0
        background rgba(7, 17, 27, 0.6)
    }