@import "../../common/stylus/mixin.styl"
.seller
    width 100%
    .seller-detail
        width 100%
        .detail-top
            margin 0 18px
            padding 18px 0
            border-1px(rgba(7,17,27,.1))
            .line-one
                font-size 14px
                line-height 14px
                font-weight bold
                margin-bottom 8px
            .line-two
                font-size 10px  
                line-height 18px
                color rgb(77,85,93)
                .sale-count
                    margin-left 12px
        .detail-bottom
            display flex 
            .bottom-item
                flex 1
                text-align center
                margin 18px 0
                border-right 1px solid rgba(7,17,27,.1)
                color rgb(147,153,159)
                font-weight 200
                color rgb(7,17,27)
                // 很强大的功能吼
                &:last-child
                    border none
                .number 
                    display inline-block
                    width 100%
                    margin-top 4px
                    font-size 24px
                    line-height 24px
                .suffix  
                    font-size 10px
            
            