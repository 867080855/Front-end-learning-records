@import "../../common/stylus/mixin"
.ratings 
    position absolute 
    top 174px
    bottom 0
    left 0
    width 100%
    overflow hidden
    .overview
        display flex 
        padding 18px 0 18px 18px
        .overview-left 
            flex 0 0 137px
            width 137px
            padding 0
            text-align center
            border-right 1px solid rgba(7,17,27,0.1)
            @media only screen and (max-width 320px)
                flex 0 0 110px
                width 110px
            .score
                font-size 24px
                color rgb(255,153,0)
                line-height 28px
                margin-bottom 6px
            .title
                font-size 12px
                color rbg(7,17,27)
                line-height 12px
                margin-bottom 8px
            .rank
                font-size 12px
                color rgb(147, 153, 159)
                line-height 12px
        .overview-right 
            flex 1
            padding 0 0 0 24px
            @media only screen and (max-width 320px)
                padding-left 6px
            .score-wrapper
                line-height 18px
                margin-bottom 8px
                font-size 0
                .title 
                    display inline-block
                    vertical-align top 
                    line-height 18px
                    color rgb(7,17,27)
                    font-size 12px
                .delivery
                    font-size 12px
                    margin-left 12px
                    vertical-align top 
                    line-height 18px
                    color rgb(147,153,159)
    .rating-wrapper
        width 100%
        .rating-item
            width 100%
            display flex
            padding 18px
            box-sizing border-box
            .avatar
                flex 0 0 28px
                width 28px
                height 28px
                margin-right 12px
                img 
                    border-radius 14px
                    width 100%
                    height 100%
            .rating-right
                flex 1
                position relative
                overflow hidden
                .line-one
                    line-height 12px
                    font-size 10px
                    margin-bottom 4px
                    .username
                        display inline-block
                        color rgb(7,17,27)
                    .datetime
                        display inline-block
                        font-weight 200
                        color rgb(147,153,159)
                        float right
                .line-two
                    margin-bottom 6px
                    .delivery-time
                        line-height 12px
                        font-size 10px
                        color rgb(147,153,159)
                .line-third
                    color rgb(7,17,27)
                    line-height 18px
                    font-size 12px
                    margin-bottom 8px
                .line-four
                    line-height 16px
                    width 100%
                    overflow hidden
                    .iconfont 
                        color rgb(0,160,220)
                        font-size 12px
                        margin-right 8px
                    .item
                        display inline-block
                        border 1px solid rgba(7,17,27,.1)
                        padding 0 6px
                        margin-right 8px
                        font-size 9px
                        color rgb(147,153,159)






            
        